<body class="upload-selfie">

<h1>Add a Picture</h1>

<%= form_for @selfie do |s| %>

  <!-- 
  For error messages:
  http://stackoverflow.com/questions/3873190/f-error-messages-in-rails-3-0
  -->
  <%# s.hidden_field :gallery_id %>
  
  <p>
    <%= s.label :name %>
    <%= s.text_field :name %>
  </p>
  <p>
    <%= s.file_field :picture %>
  </p>
  <p>
    <%= s.submit %>
  </p>

<% end %>

</body>